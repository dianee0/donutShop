{
  "name": "donutshop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "clean-install": "rm -rf node_modules package-lock.json && npm install",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:preview": "npx wrangler pages dev .vercel/output/static --compatibility-flag=nodejs_compat",
    "pages:preview:init": "npx wrangler d1 execute donutshop-dev --file=prisma/d1-schema.sql --local && npx wrangler d1 execute donutshop-dev --file=prisma/d1-seed.sql --local",
    "pages:deploy": "npx wrangler pages deploy .vercel/output/static",
    "db:schema": "npx wrangler d1 execute donutshop-dev --file=prisma/d1-schema.sql --remote",
    "db:seed": "npx wrangler d1 execute donutshop-dev --file=prisma/d1-seed.sql --remote",
    "db:seed:local": "npx wrangler d1 execute donutshop-dev --file=prisma/d1-seed.sql --local"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@prisma/client": "^6.15.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^11.15.0",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260108.0",
    "@eslint/eslintrc": "^3",
    "@prisma/adapter-d1": "^7.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "postcss": "^8",
    "prisma": "^6.15.0",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wrangler": "^4.58.0"
  }
}
